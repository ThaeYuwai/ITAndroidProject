    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LogIn"
        android:background="#112299"
        android:textColor="#ffffff"
        android:layout_weight="1"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SignUp"
        android:background="@color/colorAccent"
        android:textColor="#ffffff"
        android:layout_weight="1"/>

</LinearLayout>